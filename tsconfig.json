{
    "compilerOptions": {
        "baseUrl": "./resources",
        "allowJs": false,
        "checkJs": true,
        "target": "es5",
        "lib": ["es2015", "dom", "dom.iterable"],
        "paths": {
            "@/*": ["js/*"],
            "@components/*": ["js/components/*"]
        },
        "module": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./resources/js/**/*"],
    "exclude": ["node_modules"]
}
