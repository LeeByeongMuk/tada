{
    "compilerOptions": {
        "baseUrl": "./resources",
        "allowJs": true,
        "checkJs": true,
        "target": "es5",
        "lib": ["es2015", "dom", "dom.iterable"],
        "paths": {
            "@/*": ["js/*"]
        },
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        // "esModuleInterop": true,
        // "skipLibCheck": true,
        // "strictNullChecks": true,
    },
    "include": ["./resources/js/**/*"],
    "exclude": ["node_modules"]
}
